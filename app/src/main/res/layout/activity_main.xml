<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".MainActivity">



    <ImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:onClick="logo"
        android:src="@drawable/logo"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerInParent="true"
        android:text="English Poetry"
        android:textColor="#221"
        android:textSize="18sp"

        />

    <ImageView
        android:id="@+id/privacy"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/logo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:onClick="pp"
        android:src="@drawable/ic_security_black_48dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/privacy"
        android:gravity="center_horizontal"
        android:text="Privacy Policy"
        android:textAlignment="center"
        android:textColor="#221"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/more"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/logo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:onClick="more_apps"
        android:src="@drawable/ic_more_black_48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:text="More Apps"
        android:textAlignment="center"
        android:textColor="#221"
        android:textSize="18sp"
        android:layout_alignParentEnd="true" />


    <ImageView
        android:id="@+id/exit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/more"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:onClick="exit"
        android:src="@drawable/ic_exit_to_app_black_48dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exit"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:text="Exit"
        android:textAlignment="center"
        android:textColor="#221"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</RelativeLayout>